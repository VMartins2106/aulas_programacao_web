@model ProjetoProduto.Models._2610.ModelVETAnimal

@{
    ViewBag.Title = "Cadastrar Novo Animal";
}
<h2 style="text-align:center;">Novo Animal</h2>

<div class="center">
    @using (Html.BeginForm("Index", "animal", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group space-around-flex">
            <div class="">
                @Html.LabelFor(model => model.nomeAnimal, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nomeAnimal, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nomeAnimal, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group center">
            <div>
                <label class="control-label col-md-2" for="file">Foto</label>
            </div>
            <div class="col-md-10">
                <input type="file" name="file" id="file" /> <br />
            </div>
        </div>
        <div class="form-group space-around-flex">
            <div class="">
                @Html.LabelFor(model => model.fkcodtipoanimal, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.fkcodtipoanimal, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fkcodtipoanimal, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group space-around-flex">
            <div class="">
                @Html.LabelFor(model => model.fkcodcliente, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.fkcodcliente, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fkcodcliente, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group center">
            <div class="col-md-10">
                @ViewBag.msg <br />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar Animal" class="btn btn-success" />
            </div>
        </div>
    </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}