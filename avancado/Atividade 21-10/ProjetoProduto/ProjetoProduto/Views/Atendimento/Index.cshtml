@model ProjetoProduto.Models._2610.ModelVETAtendimento

@{
    ViewBag.Title = "Cadastrar Novo Atendimento";
}
<h2 style="text-align:center;">Novo Atendimento</h2>

<div class="center">
    @using (Html.BeginForm("Index", "Atendimento", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group space-around-flex">
            <div class="">
                @Html.LabelFor(model => model.dataAtendimento, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.dataAtendimento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dataAtendimento, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group space-around-flex">
            <div class="">
                @Html.LabelFor(model => model.horaAtendimento, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.horaAtendimento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.horaAtendimento, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group space-around-flex">
            <div class="">
                @Html.LabelFor(model => model.fkcodAnimal, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.fkcodAnimal, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fkcodAnimal, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group space-around-flex">
            <div class="">
                @Html.LabelFor(model => model.fkcodVeterinario, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.fkcodVeterinario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fkcodVeterinario, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group space-around-flex">
            <div class="">
                @Html.LabelFor(model => model.diagnostico, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.diagnostico, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.diagnostico, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group center">
            <div class="col-md-10">
                @ViewBag.msg <br />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar Atendimento" class="btn btn-success" />
            </div>
        </div>
    </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}